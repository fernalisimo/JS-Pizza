<% include common/header.ejs %>

<div class="shopping-cart">
    <div class="top-part">
            <span class="cart-title">Замовлення
                <span class="orders-count badge">0</span>
            </span>
    </div>
    <div id="cart" class="pizza-orders">

    </div>
    <div class="bottom-part">
        <span class="overalltitle">Сума замовлення</span>
        <span class="overall">1653 грн</span>
        <div class="order-button-block">

            <a type="button" class="edit-button btn btn-warning btn-lg btn-block" href="index.html">
                Редагувати замовлення
            </a>

        </div>

    </div>
</div>
<div class="discount">
    <div class="discount-top"></div>
    <div class="discount-1">ЦЬОГО ТИЖНЯ НА ВСЕ</div>
    <div class="discount-2">-20%</div>
</div>
<div class="container">
    <div class="main-block">
        <div class="order-first-step">
            <div class="first-step-title">1. Контактні дані</div>
            <div class="row">
                <div class="col-md-7">
                    <div class="form-horizontal">
                        <div class="form-group name-group">
                            <label class="col-sm-2 control-label">Ім’я</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="inputName" placeholder="Ім’я Прізвище" type="text">
                            </div>
                            <span class="incorrect-input-tip incorrect-name-tip" style="display: none;">
                                Введіть тільки власне ім’я, без цифр
                            </span>
                        </div>
                        <div class="form-group phone-group">
                            <label class="col-sm-2 control-label">Телефон</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="inputPhone" placeholder="+380" type="text">
                            </div>
                            <span class="incorrect-input-tip incorrect-phone-tip" style="display: none;">
                                Введіть номер телефону у форматі +380 або почніть з 0
                            </span>
                        </div>
                        <div class="form-group address-group">
                            <label class="col-sm-2 control-label">Адреса</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="inputAddress" placeholder="Введіть Вашу адресу" type="text">
                            </div>
                            <span class="incorrect-input-tip incorrect-address-tip" style="display: none;">
                                Введіть адресу доставки піци
                            </span>
                        </div>

                    </div>
                </div>
                <div class="col-md-5">
                    <div class="order-info">
                        <h4>Інформація про замовлення</h4>
                        <p class="order-info-time"><b>Приблизний час доставки</b>: <span class="order-info-time-text">1 min</span></p>
                        <p class="order-info-address"><b>Адреса доставки:</b> <span class="order-info-address-text">Podil, Kiev, Ukraine</span></p>

                    </div>
                </div>
            </div>
            <div class="row">

                <div class="form-group next-step">
                    <button type="button" class="btn btn-warning btn-block next-step-button">
                        Далі
                        <i class="glyphicon glyphicon-chevron-right icon-white">
                        </i>
                    </button>
                </div>

            </div>
        </div>
        <div id="googleMap" style="width: 100%; height: 250px;"></div>
        <div id="liqpay"></div>
    </div>
</div>

